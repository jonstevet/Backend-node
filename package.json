{
    "name": "backend-nodejs",
    "version": "1.0.0",
    "description": "backend whit nodejs and express",
    "main": "index.js",
    "scripts": {
        "start": "npm-run-all build production",
        "production": "NODE_ENV=production node ./dist/index.js",
        "dev": "npm-run-all build develop",
        "develop": "NODE_ENV=development nodemon ./dist/index.js",
        "test": "NODE_ENV=development jest --detectOpenHandles",
        "lint": "eslint",
        "prettier": "prettier --write",
        "build": "npm-run-all clean transpile",
        "transpile": "babel ./src --out-dir dist",
        "clean": "rimraf dist, logs"
    },
    "nodemonConfig": {
        "watch": [
            "src/*",
            "dist/*"
        ],
        "ignore": [
            "**/__tests__/**",
            "*.test.js",
            "*.spec.js",
            "node_modules",
            "logs"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "es6": true,
            "node": true,
            "jest": true
        },
        "rules": {
            "no-console": "warn"
        }
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/tests"
        ],
        "testMatch": [
            "**/__tests__/**/*.+(ts|tsx|js)",
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts,tsx}",
            "!**/*.d.ts",
            "!**/node_modules/**"
        ],
        "globals": {}
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jonstevet/backendnode.git"
    },
    "keywords": [
        "nodejs",
        "javascript"
    ],
    "author": "Jonathan Torres A.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jonstevet/backendnode/issues"
    },
    "homepage": "https://github.com/jonstevet/backendnode#readme",
    "engines": {
        "node": ">=18.14.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7",
        "supertest": "^6.3.3"
    },
    "dependencies": {
        "@babel/cli": "^7.21.0",
        "@babel/core": "^7.21.4",
        "@babel/preset-env": "^7.21.4",
        "@hapi/boom": "^10.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "joi": "^17.9.1",
        "npm-run-all": "^4.1.5",
        "path": "^0.12.7",
        "pg": "^8.10.0",
        "pg-hstore": "^2.3.4",
        "rimraf": "^4.4.1",
        "sequelize": "^6.30.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    }
}
